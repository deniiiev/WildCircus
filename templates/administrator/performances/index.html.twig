{% extends 'admin.html.twig' %}

{% block title %}Performances{% endblock %}

{% block body %}
    <h1>Performances</h1>

    <table class="uk-table uk-table-hover uk-table-middle uk-table-divider">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for performance in performances %}
            <tr>
                <td>{{ performance.id }}</td>
                <td><a href="{{ path('administrator_performances_show', {'id': performance.id}) }}">{{ performance.title }}</a></td>
                <td class="uk-text-truncate">{{ performance.description | raw }}</td>
                <td class="crud-img">
                    <div style="background-image: url('/assets/images/{{ performance.image }}')"></div>
                </td>
                <td class="crud-actions">
                    <div>
                        <a href="{{ path('administrator_performances_edit', {'id': performance.id}) }}">
                            <i class="fas fa-pen"></i>
                        </a>
                        {{ include('administrator/performances/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="uk-button uk-button-primary" href="{{ path('administrator_performances_new') }}">Create new</a>
{% endblock %}
